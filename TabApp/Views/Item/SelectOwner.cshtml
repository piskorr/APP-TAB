<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Address
            </th>
            <th>
                Email
            </th>
            <th>
                Telephone Number
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <form asp-controller="Item" asp-action="SelectOwner">
                <th>
                    <input type=text name="NameFilter" value="@ViewBag.NameFilter">
                </th>
                <th>
                    <input type=text name="SurnameFilter" value="@ViewBag.SurnameFilter">
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                    <button type="submit" class="btn btn-outline-primary my-2 my-sm-0"> Filter </button>
                    <input type=hidden name="SerialNumber" value="@ViewBag.SerialNumber">
                    <input type=hidden name="Description" value="@ViewBag.Description">
                </th>
            </form>
        </tr>
        @foreach (var person in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelPerson => person.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelPerson => person.Surname)

                </td>
                <td>
                    @Html.DisplayFor(modelPerson => person.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelPerson => person.Email)

                </td>
                <td>
                    @Html.DisplayFor(modelPerson => person.PhoneNumber)
                </td>
                <td>
                    <form asp-controller="Item" asp-action="AddItemWithPerson">
                        <input type=hidden name="SerialNumber" value="@ViewBag.SerialNumber">
                        <input type=hidden name="Description" value="@ViewBag.Description">
                        <input type=hidden name="PersonID" value="@person.ID">
                        <button type="submit" class="btn btn-outline-primary my-2 my-sm-0"> AddItemWithPerson </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
